@model TrialLoginAndRegistrationWeb.Models.Clothes

<h2>Додавання одягу</h2>
<form asp-action="create" asp-controller="clothes">
            <div class="col-md-4">
                <section>
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Name" class="form-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
            <div class="form-floating">
                <input asp-for="Categories" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Categories" class="form-label"></label>
                <span asp-validation-for="Categories" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="SubCategories" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="SubCategories" class="form-label"></label>
                <span asp-validation-for="SubCategories" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Size" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Size" class="form-label"></label>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Color" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Color" class="form-label"></label>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Brand" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Brand" class="form-label"></label>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Price" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Price" class="form-label"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Foto" class="form-control"></label>*@
                <input asp-for="Foto" type="file" class="btn btn-primary btn-sm"></input>
            </div>

                </section>
            </div>
    <input type="submit" value="Добавити" class="btn btn-primary btn-sm"></input>
</form>
